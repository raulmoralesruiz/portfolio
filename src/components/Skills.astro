---
const skills = [
    { category: "Frontend", items: ["Angular", "HTML", "CSS", "JavaScript", "TypeScript", "Astro", "Tailwind"] },
    { category: "Backend", items: ["Node.js", "Java", "Express", "SQL", "MongoDB", "REST APIs", "WebSocket"] },
    { category: "Admin", items: ["Linux", "Docker", "Nginx", "Home server", "Despliegue de aplicaciones"] },
    { category: "Soft Skills", items: ["Comunicación efectiva", "Trabajo en equipo", "Resolución de problemas", "Aprendizaje continuo", "Autonomía"] },
];
---
<section id="habilidades" class="py-20 container mx-auto px-4 max-w-4xl">
    <h2 class="text-3xl font-bold text-white mb-12 flex items-center">
        <span class="text-emerald-400 mr-2 font-mono text-2xl">02.</span> Habilidades
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {skills.map(skillGroup => (
            <div class="bg-neutral-900/50 p-6 rounded-lg border border-neutral-800 hover:border-emerald-500/30 transition-colors hover:shadow-lg hover:shadow-emerald-500/5">
                <h3 class="text-xl font-semibold text-emerald-400 mb-4 font-mono">{skillGroup.category}</h3>
                <ul class="space-y-2">
                    {skillGroup.items.map(item => (
                        <li class="flex items-center text-gray-400 text-sm md:text-base">
                            <span class="text-emerald-500 mr-2">▹</span>
                            {item}
                        </li>
                    ))}
                </ul>
            </div>
        ))}
    </div>
</section>
