---
const projects = [
    {
        title: "Virus! Backend",
        description: "Backend para la aplicación web del famoso juego de cartas Virus!",
        tech: ["Node.js", "Express", "Socket.io", "TypeScript"],
        link: "https://virus.raulmorales.eu",
        github: "https://github.com/raulmoralesruiz/virus-backend"
    },
    {
        title: "Virus! Frontend",
        description: "Frontend para la aplicación web del famoso juego de cartas Virus!",
        tech: ["Angular", "Socket.io", "HTML", "CSS", "TypeScript"],
        link: "https://virus.raulmorales.eu",
        github: "https://github.com/raulmoralesruiz/virus-frontend"
    },
    {
        title: "Portfolio",
        description: "Portfolio personal creado con Astro",
        tech: ["Astro", "Tailwind", "HTML", "CSS"],
        link: "https://aboutme.raulmorales.eu",
        github: "https://github.com/raulmoralesruiz/aboutme-astro"
    },
];
---
<section id="proyectos" class="py-20 container mx-auto px-4 max-w-4xl">
    <h2 class="text-3xl font-bold text-white mb-12 flex items-center">
        <span class="text-emerald-400 mr-2 font-mono text-2xl">03.</span> Proyectos
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {projects.map(project => (
            <div class="group relative bg-neutral-900 border border-neutral-800 rounded-xl overflow-hidden hover:translate-y-[-5px] transition-all duration-300 shadow-md hover:shadow-emerald-500/10">
                <div class="p-8 flex flex-col h-full">
                    <div class="flex justify-between items-start mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                        </svg>
                        <div class="flex space-x-4">
                            <a href={project.github} class="text-gray-400 hover:text-emerald-400 transition-colors" aria-label="GitHub">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
                            </a>
                            <a href={project.link} class="text-gray-400 hover:text-emerald-400 transition-colors" aria-label="Demo">
                                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
                            </a>
                        </div>
                    </div>
                    <h3 class="text-xl font-bold text-gray-200 mb-2 group-hover:text-emerald-400 transition-colors">{project.title}</h3>
                    <p class="text-gray-400 text-sm mb-6 flex-grow leading-relaxed">{project.description}</p>
                    <ul class="flex flex-wrap gap-3 mt-auto font-mono text-xs">
                        {project.tech.map(t => (
                            <li class="text-emerald-400/90">{t}</li>
                        ))}
                    </ul>
                </div>
            </div>
        ))}
    </div>
</section>
